{
  "persitence_single_dir": {
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
      "persistence": {
        "dirs": "~/.config/tests/nested/deep"
      }
    },
    "containerUser": "vscode",
    "onCreateCommand": "mkdir -p /mnt/persistence-data"
  },
  "persitence_single_file": {
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
      "persistence": {
        "files": "~/.zshrc"
      }
    },
    "containerUser": "vscode",
    "onCreateCommand": "mkdir -p /mnt/persistence-data"
  }
}